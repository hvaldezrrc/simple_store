<h1>All Products</h1>

<div class="products">
  <% @products.each do |product| %>
    <div class="product">
      <h2><%= product.title %></h2>
      <p><%= product.description %></p>
      <p>Price: $<%= product.price %></p>
      <p>In Stock: <%= product.stock_quantity %></p>
    </div>
    <hr>
  <% end %>
</div>
